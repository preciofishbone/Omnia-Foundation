{
    "itemTemplates": [
        {   
            "category": "Client side",         
            "title": "Omnia Control",
            "description": "Template for Omnia control with settings form",
            "source": {
                "folder": "item-templates/omnia-control",
                "replace": "control"
            }            
        },
         {   
            "category": "Server side",         
            "title": "Timer Job",
            "description": "Template for creating a job that runs on a specific schedule",
            "source": {
                "folder": "item-templates/job-timer",
                "replace": "job"
            }            
        }
    ],
    "options": [
        {
            "title": "Extension Package",
            "options": [
                {
                    "title": "Client Side",
                    "options": [
                        { 
                            "title": "Angular Tooling",
                            "requiredForChildren": true,
                            "action": {
                                "type": "client-task",
                                "payload": "Angular"   
                            },
                            "samples": [
                                {
                                    "title": "Hello World Control",
                                    "description": "Simple Omnia control that display a text message from an Omnia setting",
                                    "source": {
                                        "folder": "samples/helloworld-control",
                                        "files": [ "control.ts", "control.html", "control-settings.ts", "control-settings.html" ]
                                    },
                                    "destination": {
                                        "projectName": "ExtPkg",
                                        "folder": "TenantResources/Core/Components/HelloWorld"
                                    }
                                }
                            ]
                        },
                        { 
                            "title": "Less Tooling",
                            "requiredForChildren": true,
                            "action": {
                                "type": "client-task",
                                "payload": "Less"   
                            }
                        }
                    ]
                },
                {
                    "title": "Server Side",
                    "samples": [
                        {
                            "title": "Omnia Feature",
                            "Description": "",
                            "source":{
                                "folder": "samples/omnia-feature",
                                "files": [ "CoreFeature.cs" ]
                            },
                            "destination":{
                                "projectName": "ExtPkg",
                                "folder": "Features"
                            }
                        },
                        {
                            "title": "Favorite Icon Provisioning Pipeline",
                            "description": "Provisioning pipeline for setting favorite icon in SharePoint",
                            "source":{
                                "folder": "samples/favicon-provisioning-pipeline",
                                "files": [ "FavIconProvisioningPipeline.cs" ]
                            },
                            "destination":{
                                "projectName": "ExtPkg",
                                "folder": "ProvisioningPipelines"
                            }
                        }
                    ]
                },
                {
                    "title": "Setup basic folder structure",
                    "requiredForChildren": true,
                    "action": {
                            "type": "add-folders",
                            "payload": "Add"   
                            },
                    "samples": []
                }
            ]
        },    
        {
            "title": "Web API",
            "action": {
                "type": "add-webapi",
                "payload": "Add"   
            }           
        }    
       
    ]   
}