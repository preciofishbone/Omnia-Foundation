{
    "itemTemplates": [
        {      
            "defaultName": "OmniaControl",  
            "title": "Omnia Control",
            "category": "Client side", 
            "icon": "code",
            "description": "Template for Omnia control with settings form",
            "source": {
                "folder": "item-templates/omnia-control",
                "files":[
                    {
                        "name": "control.ts",
                        "targetName": "$fileinputname$.ts"
                    },
                    {
                        "name": "control.html",
                        "targetName": "$fileinputname$.html"
                    },
                    {
                        "name": "control-settings.ts",
                        "targetName": "$fileinputname$-settings.ts"
                    },
                    {
                        "name": "control-settings.html",
                        "targetName": "$fileinputname$-settings.html"
                    }
                ]
            }            
        },
         {   
            "defaultName": "Job",  
            "title": "Timer Job", 
            "category": "Server side",         
            "icon": "structure",
            "description": "Template for creating a job that runs on a specific schedule",
            "source": {
                "folder": "item-templates/job-timer",
                "files":[
                    {
                        "name": "Job.cs",
                        "targetName": "$fileinputname$.cs"
                    }
                ]
            }            
        },
        {   
            "defaultName": "Job",
            "title": "Queue Job",
            "category": "Server side",         
            "icon": "structure",
            "description": "Template for creating a job that listens to a queue",
            "source": {
                "folder": "item-templates/job-queue",
                 "files":[
                    {
                        "name": "Job.cs",
                        "targetName": "$fileinputname$.cs"
                    }
                ]
            }            
        },
         {  
            "defaultName": "PublicLocalization", 
            "title": "Public Localization",
            "category": "Localization",         
            "icon": "localize",
            "description": "A localization file for use in the public UX",
            "source": {
                "folder": "item-templates/localization-public",
                 "files":[
                    {
                        "name": "public.loc.json",
                        "targetName": "$fileinputname$.loc.json"
                    },
                    {
                        "name": "public.loc.sv-se.json",
                        "targetName": "$fileinputname$.loc.sv-se.json"
                    }
                ]
            }            
        },
        {   
            "defaultName": "AdminLocalization",
            "title": "Admin Localization",
            "category": "Localization",         
            "icon": "localize",
            "description": "A localization file for Omnia Admin UX",
            "source": {
                "folder": "item-templates/localization-admin",
                 "files":[
                    {
                        "name": "admin.loc.json",
                        "targetName": "$fileinputname$.loc.json"
                    },
                    {
                        "name": "admin.loc.sv-se.json",
                        "targetName": "$fileinputname$.loc.sv-se.json"
                    }
                ]
            }            
        }
    ],
    "options": [
        {
            "title": "Extension Package",
            "options": [
                {
                    "title": "Client Side",
                    "options": [
                        { 
                            "title": "Angular Tooling",
                            "requiredForChildren": true,
                            "action": {
                                "type": "client-task",
                                "payload": "Angular"   
                            },
                            "samples": [
                                {
                                    "title": "Hello World Control",
                                    "description": "Simple Omnia control that display a text message from an Omnia setting",
                                    "source": {
                                        "folder": "samples/helloworld-control",
                                        "files": [ "control.ts", "control.html", "control-settings.ts", "control-settings.html" ]
                                    },
                                    "destination": {
                                        "projectName": "ExtPkg",
                                        "folder": "TenantResources/Core/Components/HelloWorld"
                                    }
                                }
                            ]
                        },
                        { 
                            "title": "Less Tooling",
                            "requiredForChildren": true,
                            "action": {
                                "type": "client-task",
                                "payload": "Less"   
                            }
                        }
                    ]
                },
                {
                    "title": "Server Side",
                    "samples": [
                        {
                            "title": "Omnia Feature",
                            "Description": "",
                            "source":{
                                "folder": "samples/omnia-feature",
                                "files": [ "CoreFeature.cs" ]
                            },
                            "destination":{
                                "projectName": "ExtPkg",
                                "folder": "Features"
                            }
                        },
                        {
                            "title": "Favorite Icon Provisioning Pipeline",
                            "description": "Provisioning pipeline for setting favorite icon in SharePoint",
                            "source":{
                                "folder": "samples/favicon-provisioning-pipeline",
                                "files": [ "FavIconProvisioningPipeline.cs" ]
                            },
                            "destination":{
                                "projectName": "ExtPkg",
                                "folder": "ProvisioningPipelines"
                            }
                        }
                    ]
                },
                {
                    "title": "Setup basic folder structure",
                    "requiredForChildren": true,
                    "action": {
                            "type": "add-folders",
                            "payload": "Add"   
                            },
                    "samples": []
                }
            ]
        },    
        {
            "title": "Web API",
            "action": {
                "type": "add-webapi",
                "payload": "Add"   
            }           
        }    
       
    ]   
}